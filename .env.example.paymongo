# PayMongo Configuration
# Get these keys from your PayMongo Dashboard: https://dashboard.paymongo.com/

# Test Keys (for development)
PAYMONGO_PUBLIC_KEY=pk_test_your_public_key_here
PAYMONGO_SECRET_KEY=sk_test_your_secret_key_here

# Live Keys (for production)
# PAYMONGO_PUBLIC_KEY=pk_live_your_public_key_here
# PAYMONGO_SECRET_KEY=sk_live_your_secret_key_here

# Webhook URL for PayMongo to send payment updates
# This should be your domain + /webhook/paymongo
# Example: https://yourdomain.com/webhook/paymongo
PAYMONGO_WEBHOOK_URL=http://localhost:8000/webhook/paymongo

# AI Categorization Configuration
# Set to false to disable AI categorization polling completely
AI_CATEGORIZATION_ENABLED=true
# Polling interval in milliseconds (default: 3000)
AI_CATEGORIZATION_POLLING_INTERVAL=3000

# AI Categorization Logging
# Number of days to keep AI categorization ping logs (default: 7)
LOG_AI_CATEGORIZATION_DAYS=7
